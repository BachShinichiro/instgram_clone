<p id="notice"><%= notice %></p>

<div class="pt-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mb-5">
      <h1>Pictures</h1>
      <%= link_to 'New Picture', new_picture_path %>
       <% @pictures.each do |picture| %>
        <div class="card lg-6 box-shadow"  style="max-width: 30rem;">
          <%= image_tag picture.image.thumb.url %>
          <div class="card-body">
            <h5 class="card-title"><%= picture.user.name %></h5>
            <p class="card-text"><%= picture.content %>.</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', picture %></button>
                <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_picture_path(picture) %></button>
                <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></button>
              </div>
              <small class="text-muted">9 mins</small>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<br>


